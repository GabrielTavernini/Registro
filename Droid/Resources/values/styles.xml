<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <item name="colorAccent">#E15BBB</item> 
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    </style>

    <style name="MarksTheme" parent="MyTheme.Base">
        <item name="colorAccent">#00B1D4</item> 
    </style>

    <style name="AveragesTheme" parent="MyTheme.Base">
        <item name="colorAccent">#61DDDD</item> 
    </style>

    <style name="ArgumentsTheme" parent="MyTheme.Base">
        <item name="colorAccent">#B2D235</item> 
    </style>

    <style name="NotesTheme" parent="MyTheme.Base">
        <item name="colorAccent">#F2AA52</item> 
    </style>

    <style name="AbsencesTheme" parent="MyTheme.Base">
        <item name="colorAccent">#E15B5C</item> 
    </style>

    <style name="SettingsTheme" parent="MyTheme.Base">
        <item name="colorAccent">#E15BBB</item> 
    </style>

    
    
    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/LaunchView</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    
</resources>